	option src 'tbb'
	option proto 'icmp'
	option family 'ipv4'
	option target 'ACCEPT'

config rule
	option name 'Allow-icmp-wifi2'
	option src 'wifi2'
	option proto 'icmp'
	option family 'ipv4'
	option target 'ACCEPT'

config rule
