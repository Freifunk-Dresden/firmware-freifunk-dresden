######################################################################
# This file lists one target in each line that should be built
# in one run.
#
#   The order is important for device specific builds.
#   In this case output directory is not deleted and device specific
#   files are placed in exisiting directory.
#
#       Example for device specific:
#               ramips.mt7621.ubiquiti-edgerouter-x
#
#   If no specific device builds are created, then platform directory
#   is deleted before.
#   So consider order when specifying targets!
#
#   Excample:
#   	openwrt:ramips.mt7621
#	openwrt:ramips.mt7621.ubiquiti-edgerouter-x"
#   This would first build all targets that can be built, and then device specific
#   builds are generated and copied
#
# target name has specific format:
#   os:platform.subplatform
# or
#   os:platform.subplatform.device
#
# Each line starts with a "selector" (os)
# When calling build.sh you select one of the os versions (openwrt or trunk...)
# build.sh then only selects those targets which match the os version

#########################################################################

# "openwrt_rev":"70255e3d624cd393612069aae0a859d1acbbeeae", # tag 18.6.1
# "openwrt_rev":"a02809f61bf9fda0387d37bd05d0bcfe8397e25d", # tag 18.06.2
# "openwrt_rev":"db7a1e7c044ed1f8cf5fe8a4fc57c5dd27920337", # branch 18.07 31.8.2019

{
 "targets": [
# ------------- default values ------------------------------
# this block must come always first, because the first block is used
# as default
	{	
		"name":"default",			# currently just an unused name (only displayed) 
							# if following blocks do not specifiy there own value
		"target":"ar71xx",
		"subtarget":"generic",
		"variant":"",				# used to distinguish different configs
							# e.g. 	could be name of a router or
							#      	a set of routers when selecting "multiple devices"
							#	via "make menuconfig"

#		"openwrt_rev":"28d3afc8d67231c2ad7adbde3e4b1179d0648c0e", # 19.07 Mi 2. Okt 15:47:02 UTC 2019
		"openwrt_rev":"d3e11e8ad85b9a51027174d5207e1e43a8c8fe94", # 19.07 Sat Nov 9 20:10:58 2019

		"selector-config":"19.07",		# used to select config
		"selector-files":"dummy",		# used to select files
		"selector-feeds":"19.07",		# used to select feeds
		"selector-patches":"19.07",		# used to select patches
		
		#"openwrt_rev":"f6de1fa6c6b69ac6282f453f61c894695d11f433", # 18.06 01-09-2019
		#"selector-config":"18.06",		# used to select config
		#"selector-files":"dummy",		# used to select files
		#"selector-feeds":"18.06",		# used to select feeds
		#"selector-patches":"18.06",		# used to select patches

		# generates the feeds/feeds-[selector].conf
		# for short commit value use: git log --abbrev-commit
		"feeds" : [
				{"type":"src-link", 	"name":"ddmesh_own",	"src":"feeds-own" },	# feeds/<selector>/feeds-own
				{"type":"src-git", 	"name":"packages",	"src":"https://git.openwrt.org/feed/packages.git",	"rev":"ec6cd9b9c"},
				{"type":"src-git", 	"name":"routing",	"src":"https://git.openwrt.org/feed/routing.git",	"rev":"8d5ee29"},
				{"type":"src-git", 	"name":"telephony",	"src":"https://git.openwrt.org/feed/telephony.git",	"rev":"821bcb7"}
			  ],

		# install addional packages from feeds (see feeds.conf)
		"packages":["libpam","libcap","libgnutls","libopenldap",
				"libidn2","libssh2","libnetsnmp",
				"libcap", "jansson", "kmod-cryptodev", "liblzma" ],
		# apply additional target patches
		"target-patches":[""]
	},
# ------------- specific targets ------------------------------
	{	
		"name":"openwrt:ar71xx.tiny",	# can be any name
		"target":"ar71xx",
		"subtarget":"tiny",
		"openwrt_rev":"f6de1fa6c6b69ac6282f453f61c894695d11f433", # 18.06 01-09-2019
		"selector-config":"18.06",		# used to select config
		"selector-files":"dummy",		# used to select files
		"selector-feeds":"18.06",		# used to select feeds
		"selector-patches":"18.06",		# used to select patches
		"feeds" : [
				{"type":"src-link", 	"name":"ddmesh_own",	"src":"feeds-own" },
				{"type":"src-git", 	"name":"packages",	"src":"https://git.openwrt.org/feed/packages.git",	"rev":"de3766173"},
				{"type":"src-git", 	"name":"luci",		"src":"https://git.openwrt.org/project/luci.git",	"rev":"204293a76"},
				{"type":"src-git", 	"name":"routing",	"src":"https://git.openwrt.org/feed/routing.git",	"rev":"ff5100e"},
				{"type":"src-git", 	"name":"telephony",	"src":"https://git.openwrt.org/feed/telephony.git",	"rev":"9167e30"}
			  ]
	},
	{	
		"name":"openwrt:ar71xx.generic",
		"target":"ar71xx",
		"subtarget":"generic"
	},
	{	
		"name":"openwrt:x86.generic",
		"target":"x86",
		"subtarget":"generic"
	},
	{	
		"name":"openwrt:x64.generic",
		"target":"x86",
		"subtarget":"64",
		"packages":["qemu", "libpam", "libgnutls", "libopenldap", "libidn2", "libssh2", "libcap", "liblzma", "libnetsnmp", "jansson" ],
		"target-patches":["package-qemu-ga-buildfix.patch"]
	},
	{	
		"name":"openwrt:ramips.mt7621.generic",
		"target":"ramips",
		"subtarget":"mt7621",
		"variant":"generic"
	},
	{	
		"name":"openwrt:ramips.mt7621.ubiquiti-edgerouter-x",
		"target":"ramips",
		"subtarget":"mt7621",
		"variant":"ubiquiti-edgerouter-x"	# specific target (overwrites previous generic only for this device)
	},
