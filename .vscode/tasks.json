{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build freifunk firmware",
            "type": "shell",
            "command": "./build.sh ar71xx.tiny.lowmem -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        },
        {
            "label": "list targets",
            "type": "shell",
            "command": "./build.sh list",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
            ],
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        },
        {
            "label": "upload current file",
            "type": "shell",
            "command": "eval scp ${file} root@${input:targetIp}:/$(echo '${relativeFile}' | sed 's#files/common##' )",
            "problemMatcher": [
            ],
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ],
    "inputs" : [
        {
            "id" : "targetIp",
            "description" : "IP address of target",
            "default" : "192.168.222.1",
            "type" : "promptString",
        }
    ]
}