{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build freifunk firmware",
            "type": "shell",
            "command": "./build.sh ${input:pickTarget}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        },
        {
            "label": "upload current file",
            "type": "shell",
            "command": "eval scp ${file} root@${input:targetIp}:/$(echo '${relativeFile}' | sed 's#files/[^/]*/##' )",
            "problemMatcher": [
            ],
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ],
    "inputs" : [
        {
            "id" : "targetIp",
            "description" : "IP address of target",
            "default" : "192.168.222.1",
            "type" : "promptString",
        },
        {
            "id" : "pickTarget",
            "description" : "provides a list with targets",
            "default" : "list",
            "type" : "pickString",
            "options" : [
"list",
"all",
"failed",
"ar71xx.tiny.lowmem",
"ar71xx.generic.lowmem",
"ramips.rt305x.tiny.lowmem",
"x86.generic.offloader",
"x86.64.offloader",
"ramips.mt7621.generic",
"ramips.mt7621.offloader",
"ramips.mt76x8.generic",
"lantiq.xrx200",
"lantiq.xway",
"sunxi.cortexa7.offloader",
"ath79.generic",
"ath79.generic.gl-mifi",
"ath79.nand",
"ath79.generic.smallbuffers",
"ipq40xx.generic",
"ipq40xx.generic.fr-1200",
"bcm53xx.generic.arm",
"mpc85xx.p1020"
            ]
        }
    ]
}
